# Only mysql — and probably mariadb — are supported.
# Create a database with utf8 encoding and ut8_unicode_ci collation for development or production.
# TODO: If the developer has already created this database manually, the encoding may be incorrect.
# Set it post-facto.
default: &default
  adapter: mysql2
  encoding: utf8
  username: <username>
  password: <password>
  host: 127.0.0.1
  port: 3306

development:
  <<: *default
  database: <development-database-name>

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  <<: *default
  database: <test-database-name>

staging:
  <<: *default
  database: <staging-database-name>

production:
  <<: *default
  database: <production-database-name>

